{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksVersion": "1.29.1",
    "buildCommand": "npm ci && prisma generate && next build"
  },
  "deploy": {
    "startCommand": "npm start",
    "healthcheckPath": "/",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE"
  },
  "variables": {
    "NODE_VERSION": "20.x",
    "NPM_CONFIG_PRODUCTION": "false",
    "CI": "true"
  },
  "nixpacks": {
    "pkgs": ["python3", "gcc", "g++", "make", "nodejs", "openssl", "pkg-config"]
  }
} 